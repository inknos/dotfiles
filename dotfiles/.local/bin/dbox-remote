#!/bin/bash
if [ $# -eq 0 ]
then
    dirs=`find . -maxdepth 1 -mindepth 1 -type d -not -path '*/\.*'`
else
    dirs=$@
fi
for D in $dirs
do
    pushd $D
    if git remote rename origin upstream; then
        git remote add origin $(git remote -v | grep upstream | awk 'END {print $2}' | sed 's|.*/|git@github.com:inknos/|')
        git fetch origin  2>&1 > /dev/null
    fi
    git ctags
    popd
done

